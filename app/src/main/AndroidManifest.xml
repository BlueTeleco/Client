<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pre.client">

    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ChatsActivity" />
        <activity
            android:name=".activities.ConversationActivity"
            android:parentActivityName=".activities.ChatsActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ChatsActivity" />
        </activity>
        <activity
            android:name=".activities.DisplayMessageActivity"
            android:parentActivityName=".activities.ConversationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ConversationActivity" />
        </activity>
        <activity
            android:name=".activities.NewGroupActivity"
            android:parentActivityName=".activities.ChatsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ChatsActivity" />
        </activity>
        <activity
            android:name=".activities.NewMemberActivity"
            android:parentActivityName=".activities.ConversationActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ChatsActivity" />
        </activity>
    </application>

</manifest>